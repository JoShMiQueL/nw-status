{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NW Server Monitor Configuration",
  "description": "Configuration schema for New World Server Status Monitor",
  "type": "object",
  "required": ["servers"],
  "properties": {
    "servers": {
      "type": "array",
      "description": "List of servers to monitor with individual event configurations",
      "items": {
        "type": "object",
        "required": ["name", "events"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Server name (must match exactly on nwdb.info)"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether to monitor this server",
            "default": true
          },
          "description": {
            "type": "string",
            "description": "Optional description for this server configuration"
          },
          "events": {
            "type": "object",
            "description": "Event configuration for this specific server",
            "required": ["triggers"],
            "properties": {
              "triggers": {
                "type": "array",
                "description": "List of event triggers for this server",
                "items": {
                  "$ref": "#/definitions/trigger"
                }
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "checkInterval": {
      "type": "number",
      "description": "Check interval in milliseconds",
      "default": 300000,
      "minimum": 60000
    },
    "features": {
      "type": "object",
      "description": "Feature flags",
      "properties": {
        "statistics": {
          "type": "boolean",
          "description": "Enable statistics tracking",
          "default": true
        },
        "history": {
          "type": "boolean",
          "description": "Enable history storage",
          "default": true
        }
      }
    },
    "storage": {
      "type": "object",
      "description": "Storage file paths",
      "properties": {
        "stateFile": {
          "type": "string",
          "description": "Path to state file",
          "default": "data/state.json"
        },
        "historyFile": {
          "type": "string",
          "description": "Path to history file",
          "default": "data/history.json"
        }
      }
    }
  },
  "definitions": {
    "trigger": {
      "type": "object",
      "required": ["type", "enabled"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "transfer_to_change",
            "transfer_from_change",
            "server_status_change",
            "character_creation_change",
            "queue_change",
            "population_change"
          ],
          "description": "Type of event to monitor"
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this trigger is enabled"
        },
        "options": {
          "type": "object",
          "description": "Options for threshold-based triggers (queue_change, population_change)",
          "properties": {
            "threshold": {
              "type": "number",
              "description": "Threshold value"
            },
            "direction": {
              "type": "string",
              "enum": ["above", "below", "both"],
              "description": "Direction to monitor",
              "default": "both"
            }
          },
          "required": ["threshold"]
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this trigger"
        }
      }
    }
  }
}
