{
  "name": "nw-server-status-monitor",
  "version": "1.0.0",
  "description": "Monitor New World server status with multi-server support, statistics, and notifications",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Add your linter here (e.g., eslint)'",
    "test": "bun test",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:exe": "bun build src/index.ts --compile --outfile dist/nw-monitor.exe && npm run build:copy-files",
    "build:copy-files": "node scripts/copy-build-files.js",
    "docker:build": "docker build -t nw-status .",
    "docker:run": "docker run --rm -v $(pwd)/config.json:/app/config.json:ro -v $(pwd)/.env:/app/.env:ro -v $(pwd)/data:/app/data nw-status"
  },
  "dependencies": {
    "@types/react": "^19.2.2",
    "ink": "^6.3.1",
    "puppeteer": "23.11.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "module": "src/index.ts",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
