{
  "name": "nw-server-status-monitor",
  "version": "1.0.0",
  "description": "Monitor New World server status with multi-server support, statistics, and notifications",
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:exe": "bun build src/index.ts --compile --outfile dist/nw-monitor.exe && npm run build:copy-files",
    "build:copy-files": "bun scripts/copy-build-files.ts",
    "docker:build": "docker build -t nw-status .",
    "docker:run": "docker run --rm -v $(pwd)/config.json:/app/config.json:ro -v $(pwd)/.env:/app/.env:ro -v $(pwd)/data:/app/data nw-status"
  },
  "dependencies": {
    "puppeteer": "24.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/bun": "latest",
    "lefthook": "1.13.6"
  },
  "module": "src/index.ts",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
