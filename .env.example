# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Webhook Configuration (optional)
WEBHOOK_URL=

# Servers to monitor (comma-separated for multiple servers)
SERVERS=Nysa,Valhalla,El Dorado

# Check interval in milliseconds (default: 300000 = 5 minutes)
CHECK_INTERVAL=300000

# Features (true/false)
FEATURE_STATISTICS=true
FEATURE_HISTORY=true
FEATURE_QUEUE_ALERTS=false

# Queue alert threshold (only if FEATURE_QUEUE_ALERTS=true)
QUEUE_THRESHOLD=1000

# Storage paths (optional, defaults to data/ directory)
STATE_FILE=
HISTORY_FILE=
